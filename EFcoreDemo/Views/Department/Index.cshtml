@model IEnumerable<EFcoreDemo.Models.Domain.Department>
@{
    ViewData["Title"] = "Department List";
}
<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Department</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DeptId</td>
                <td>@department.DeptName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.DeptId" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@department.DeptId" class="btn btn-warning">Update</a>
                    <form asp-action="Delete" asp-route-id="@department.DeptId" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
