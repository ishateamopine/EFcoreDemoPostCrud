@model IEnumerable<EFcoreDemo.Models.Domain.Employee>
@{
    ViewData["Title"] = "Get All Employees";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Employee Email</th>
                    <th>Employee Salary</th>
                    <th>Department ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmpId</td>
                        <td>@employee.EmpName</td>
                        <td>@employee.EmpEmail</td>
                        <td>@employee.EmpSalary</td>
                        <td>@employee.DeptId</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@employee.EmpId" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@employee.EmpId" class="btn btn-danger">Delete</a>
                            <a asp-action="Details" asp-route-id="@employee.EmpId" class="btn btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>