@model EFcoreDemo.Models.Domain.Blog
@using EFcoreDemo.Models.ConfigOptions
@inject Microsoft.Extensions.Options.IOptions<ConfigOptions> Pos


<h2>Position (in view)</h2>
<p>Title: @Pos.Value.Title</p>
<p>Name:  @Pos.Value.Name</p>
<h2>Create Blog</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}